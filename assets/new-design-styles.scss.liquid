/**
* ----------------------------------------------------------------------------------------------
* New design styles
* ----------------------------------------------------------------------------------------------
*/

$page-background: #f2f2f5;
$product-title-color: #3a3a3a;
$accent-color: {{settings.accent_color}};
$border-color: {{settings.border_color}};

.align-left {
  text-align: left;
}

/* ------------------------------------------------------------ *\
Header section
\* ------------------------------------------------------------ */
.header__search-outer-wrapper {
  display: none;
}

@media screen and (min-width: 801px) {
  .navigation_horizontal_wrapper {
    display: table;
    width: 100%;
    border-top: 1px solid #ddd;
  }

  .navigation-horizontal  {
    display: table-cell;
    border-top: none;
  }

  .navigation-horizontal  {
    text-align: left;
  }

  .header__search-outer-wrapper {
    vertical-align: middle;
  }


  .header__item-search-text {
    font-size: 12px;
  }

}

@media screen and (min-width: 768px) {

  .header__search-outer-wrapper {
    display: table-cell;
    border-top: none;
  }

  .header__item-search, .header__item-search-text {
    display: table-cell;
    border-right: none;
  }
}


@media screen and (min-width: 500px) {
  .header__search-wrapper {
    border-right: 0;
  }

  .page__header .breadcrumb {
    left: 10px;
  }
}


/* ------------------------------------------------------------ *\
Collection pages
\* ------------------------------------------------------------ */
.page__content-background {
  background: $page-background;
}

.page__title-left {
  text-align: left;
  font-weight: 500;
}

.product-item__label.label--thrift__wrapper {
  position: absolute;
  top:10px;
  left: 10px;
  pointer-events: none;
  z-index: 3;
}

.label--thrift_loves {
  width: 100px;
  height: 26px;
  background: url(thrift_love_stamps.svg) no-repeat 0 0;
  background-size: contain;
  background-position: center;
  display: block;
  float: right;
  clear: right;
  padding: 0;
}

.bc-sf-filter-product-item-image-link {
  margin-bottom: 0!important;
}

.bc-sf-filter-product-item-inner {
  background: #ffffff;
}

.bc-sf-filter-product-bottom {
  padding: 20px 20px 10px;
  line-height: 1.4;
  border-top: 1px solid #ddd;
}

.bc-sf-filter-product-item-vendor {
  margin-bottom: 10px!important;
}

.bc-sf-filter-product-item-title {
  line-height: 1.5;
  font-size: 16px!important;
  font-weight: 600!important;
  color: #000!important;
}

.bc-sf-filter-product-item-tags {
  font-size:14px!important;
  margin-bottom: 8px !important;
  text-transform: capitalize;
}

.bc-sf-filter-bottom-pagination-default ul li span.active {
  font-weight: 500;
  color: $accent-color;
}

bc-sf-filter-product-item-image-link {
  height: auto!important;
}

#bc-sf-filter-wrapper a {
  color: $product-title-color;
}

.bc-sf-recent-products .bc-sf-filter-product-item-image-link {
  height: auto!important;
}

/* ------------------------------------------------------------ *\
Report an issue
\* ------------------------------------------------------------ */

#floating-button{
  width: 160px;
  height: 40px;
  border-radius: 10px 10px 0 0;
  background: #fa4d08;
  color: #ffffff;
  position: fixed;
  bottom: 0;
  right: 100px;
  cursor: pointer;
  box-shadow: 0px 2px 5px #666;
}

#floating-button .plus, .text{
  color: white;
  position: absolute;
  display: block;
  top: 0;
  bottom: 0;
  right: 10px;
  text-align: right;
  padding: 0;
  margin: 0;
  line-height: 40px;
  font-size: 28px;
  font-family: 'Roboto';
  font-weight: 300;
  animation: plus-out 0.3s;
  transition: all 0.3s;
}

#floating-button .text {
  text-align: left;
  font-size: 16px;
  left: 10px;
  animation: none;
}

#container-floating {
  position: fixed;
  width: 70px;
  height: 70px;
  bottom: 30px;
  right: 30px;
  z-index: 50;
}

#container-floating:hover{
  height: 400px;
  width: 90px;
  padding: 30px;
}

#container-floating:hover .plus{
  animation: plus-in 0.15s linear;
  animation-fill-mode: forwards;
}

.edit{
  position: absolute;
  display: block;
  top: 0;
  bottom: 0;
  right: 10px;
  text-align: right;
  padding: 0;
  opacity: 0;
  margin: auto;
  line-height: 40px;
  font-size: 28px;
  transform: rotateZ(-70deg);
  transition: all 0.3s;
  animation: edit-out 0.3s;
}

#container-floating:hover .edit{
  animation: edit-in 0.2s;
  animation-delay: 0.1s;
  animation-fill-mode: forwards;
}

@keyframes edit-in{
  from {opacity: 0; transform: rotateZ(-70deg);}
  to {opacity: 1; transform: rotateZ(0deg);}
}

@keyframes edit-out{
  from {opacity: 1; transform: rotateZ(0deg);}
  to {opacity: 0; transform: rotateZ(-70deg);}
}

@keyframes plus-in{
  from {opacity: 1; transform: rotateZ(0deg);}
  to {opacity: 0; transform: rotateZ(180deg);}
}

@keyframes plus-out{
  from {opacity: 0; transform: rotateZ(180deg);}
  to {opacity: 1; transform: rotateZ(0deg);}
}

.nds{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  position: fixed;
  z-index: 300;
  transform:  scale(0);
  cursor: pointer;
}

.nd4{
  background: #ba68c8;
  right: 40px;
  bottom: 240px;
  animation-delay: 0.1s;
  animation: bounce-out-nds 0.1s linear;
  animation-fill-mode:  forwards;
}

.nd5{
  background-image: url('https://lh3.googleusercontent.com/-X-aQXHatDQY/Uy86XLOyEdI/AAAAAAAAAF0/TBEZvkCnLVE/w140-h140-p/fb3a11ae-1fb4-4c31-b2b9-bf0cfa835c27');
  background-size: 100%;
  right: 40px;
  bottom: 300px;
  animation-delay: 0.08s;
  animation: bounce-out-nds 0.1s linear;
  animation-fill-mode:  forwards;
}

@keyframes bounce-nds{
  from {opacity: 0;}
  to {opacity: 1; transform: scale(1);}
}

@keyframes bounce-out-nds{
  from {opacity: 1; transform: scale(1);}
  to {opacity: 0; transform: scale(0);}
}

#container-floating:hover .nds{

  animation: bounce-nds 0.1s linear;
  animation-fill-mode:  forwards;
}

#container-floating:hover .nd3{
  animation-delay: 0.08s;
}
#container-floating:hover .nd4{
  animation-delay: 0.15s;
}
#container-floating:hover .nd5{
  animation-delay: 0.2s;
}

.letter{
  font-size: 23px;
  font-family: 'Roboto';
  color: white;
  position: absolute;
  left: 0;
  right: 0;
  margin: 0;
  top: 0;
  bottom: 0;
  text-align: center;
  line-height: 40px;
}

.reminder{
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  top: 0;
  bottom: 0;
  line-height: 40px;
}

.profile{
  border-radius: 50%;
  width: 40px;
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  right: 20px;
}

/* ------------------------------------------------------------ *\
Filters
\* ------------------------------------------------------------ */

.bc-sf-filter-block-content {

  .bc-sf-filter-option-range-amount {
    display: none;
  }

  .bc-sf-filter-option-range-slider.has-pips {
    margin-bottom: 35px;
    margin-top: 20px;
  }

  .noUi-horizontal .noUi-origin .noUi-handle {
    width: 30px!important;
    height: 30px!important;
    border-radius: 50%!important;
    top: -5px!important;
    left: auto!important;
    border: 1px solid #000000!important;

    &[data-handle="0"] {
      left:0!important;
    }


    &[data-handle="1"] {
      right:20px!important;
    }
  }
}

.bc-sf-filter-toolbar-item.bc-sf-filter-toolbar-count, #bc-sf-filter-top-sorting {
  display: none!important;
}

.bc-sf-filter-option-swatch.circle-grid li {
  margin-left: 0px !important;
  padding-right: 3px;
}

.bc-sf-filter-option-swatch-image {
  border: 1px solid #dadada!important;
}

.bc-sf-filter-left-col {
  z-index: 100;

  .bc-sf-filter-left-col-title {
    margin: 0 0 16px!important;
    font-weight: 500!important;
    font-size: 32px;

    @media screen and (max-width: 768px) {
      display: none;
    }
  }
}

.bc-sf-filter-option-block {
  padding: 20px 0;
  border-top: 1px solid #e3e3e3;
}

.bc-sf-filter-option-block:first-child {
  padding-top: 20px!important;
}

.bc-sf-filter-option-block .bc-sf-filter-block-title h3 {
  font-size: 20px;
  font-weight: 500;
  text-transform: capitalize;
  color: #969696;
}

.bc-sf-filter-right-col {
  .bc-sf-filter-product-item-price {
    font-size: 18px;
    font-weight: 600;
    color: $accent-color;
  }
}

.bc-sf-filter-option-block .bc-sf-filter-block-content .bc-sf-filter-option-box li {
  min-width: auto!important;
}

.bc-sf-filter-option-block .bc-sf-filter-block-content .bc-sf-filter-option-box li, .bc-sf-filter-option-block .bc-sf-filter-block-content .bc-sf-filter-option-box li a {
  display: inline-block;
  margin-bottom: 5px;
  border-radius: 50%;
  border: none!important;
  padding: 0!important;
  margin-right: 2%;
  min-width: auto;
  width: 40px!important;
  height: 40px;
  line-height: 40px;
  text-align: center;
  vertical-align: middle;
}

.bc-sf-filter-option-block .bc-sf-filter-block-content .bc-sf-filter-option-box li a {
  border: 1px solid #ccc!important;
  font-size: 14px !important;
}


@media screen and (min-width: 768px) {
  .bc-sf-filter-option-block .bc-sf-filter-block-content .bc-sf-filter-option-box li a:hover {
    text-decoration: none;
    border: 1px solid #000!important;
    border-radius: 50%;
    background: #fff!important;
    color: #000!important;

    #bc-sf-filter-wrapper a {
      border: 1px solid #000;
    }
  }

  .bc-sf-filter-option-block .bc-sf-filter-block-content .bc-sf-filter-option-box li a:hover span {
    color: #000!important;
  }
}

/* The sticky class is added to the LHS filter with JS when it reaches its scroll position */
.stuckFilter {
  position: fixed;
  top: 200px;
  bottom: 0;
  width: 20%;
  max-width: 230px;
  float: left;
  overflow-y: scroll;
  overflow-x: hidden;
}

/* ------------------------------------------------------------ *\
Product pages
\* ------------------------------------------------------------ */
.product-meta__title {
  margin-bottom: 12px;
  font-size: 32px;
  font-weight: 500;
  line-height: 1.4;
  color: #383838;
}

.product-meta__price {
  font-weight: 500;
  font-size: 32px;
}

.product__description {
  border-top: 1px solid $border-color;
  border-bottom: 1px solid $border-color;
  padding-top: 20px;
}

@media(min-width:801px){
  body.template-product{
    .product__showcase.grid__cell.\33 \2f 5--lap-and-up{
      position:relative;
      ul.product__slideshow{
        width:80%;
        float:right;
      }
      ul.product__thumbnails{
        width:18%;
        margin-right:2%;
        float:right;
      }
    }
  }
}

@media screen and (min-width: 500px) {
  .product-meta__vendor {
    font-size: 32px;
  }
}

.product__button {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: space-between;
  -ms-flex-pack: justify;
  justify-content: space-between;
  margin-top: 10px;
}

@media screen and (min-width: 801px) {
  .product__button {
    display: inline-block!important;
  }

  .product__buy {
    margin-right: 10px;;
  }
}

.button--primary, .button--secondary, .product #shopify-product-reviews .button-primary {
  border-radius: 5px;
}




/* ------------------------------------------------------------ *\
Newsletter section
\* ------------------------------------------------------------ */
.newsletter__form {

  .newsletter__email::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
    color: black;
    opacity: 1; /* Firefox */
  }
  .newsletter__email:-ms-input-placeholder { /* Internet Explorer 10-11 */
    color: black;
  }
  .newsletter__email::-ms-input-placeholder { /* Microsoft Edge */
    color: black;
  }

  .newsletter__submit {
    color: $accent-color;
    border: 1px solid $accent-color;
    border-radius: 4px;

    &:hover {
      background: $accent_color;
      color: #fff;
    }
  }
}

/* ------------------------------------------------------------ *\
Footer
\* ------------------------------------------------------------ */

.footer {
  background: #000;
  color: #fff;

  .footer__wrapper {

    @media screen and (min-width: 801px) {
      padding: 0 20px;
    }

    .footer__item {
      position: relative;
      display: table-cell;
      height: 100%;
      vertical-align: top;
      background-clip: padding-box !important;
    }

    .footer__item-logo {
      padding: 4px 15px 0;
      border-right: none;
      vertical-align: top;

      @media screen and (min-width: 500px) {
        padding-left: 25px;
        text-align: left;
      }
    }

    .footer__module {
      float: right;
    }

    .footer__title {
      color: #f2f2f5;
      font-weight: 600;
    }

    a {
      color: #969696;

      &:hover {
        color: $accent-color;
      }
    }
  }

}
