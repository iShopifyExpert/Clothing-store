<ul class="alert__errors" style="color=>
  {% for field in form.errors %}
    {% if field == 'form' %}
      <li class="alert__error" style="color: #fff; background: #1990c6">{{ form.errors.messages[field] }}</li>
    {% else %}
      <li class="alert__error" style="color: #fff; background: #1990c6">{{ form.errors.translated_fields[field] }}: {{ form.errors.messages[field] }}</li>
    {% endif %}
  {% endfor %}
</ul>